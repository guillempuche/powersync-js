{
  "compilerOptions": {
    "baseUrl": "./",
    "esModuleInterop": true,
    "jsx": "react",
    "rootDir": "src",
    "composite": true,
    "outDir": "./lib",
    "lib": ["esnext", "DOM"],
    "module": "esnext",
    "inlineSourceMap": true,
    "inlineSources": true,
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitUseStrict": false,
    "noStrictGenericChecks": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "target": "esnext"
  },
  "references": [
    {
      "path": "../common"
    }
  ],
  "include": ["src/**/*"]
}
